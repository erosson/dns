#!/bin/bash
set -eu
cd "`dirname "$0"`"

# if variable is defined, send it to a file. https://stackoverflow.com/a/16946761
if [ -v STATIC_SITES_DEPLOY_PUBLIC_KEY ]; then
    echo "$STATIC_SITES_DEPLOY_PUBLIC_KEY" > .ssh/id_rsa.pub
fi
if [ -v STATIC_SITES_DEPLOY_PRIVATE_KEY ]; then
    echo "$STATIC_SITES_DEPLOY_PRIVATE_KEY" > .ssh/id_rsa
fi
# ssh-keygen -f "/home/node/.ssh/known_hosts" -R "static-droplet.erosson.org"
ssh -i .ssh/id_rsa root@static-droplet.erosson.org "$@"
# ssh -i .ssh/id_rsa root@www.erosson.org "$@"